@page
@using RazorHotelDB21.Model;
@model RazorHotelDB21.Pages.Rooms.CreateModel
@{
}

<h1>Create Room</h1>

<h2 class="alert-danger">@Model.Error</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <input type="hidden" asp-for="@Model.Hotel_No" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Room_No" class="custom-control-label"></label>
                <input asp-for="@Model.Room_No" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Types" class="custom-control-label"></label>
                <select asp-for="@Model.Types" class="form-control">
                    <option value="@RoomTypes.S">Single</option>
                    <option value="@RoomTypes.D">Double</option>
                    <option value="@RoomTypes.F">Familie</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Price" class="custom-control-label"></label>
                <input asp-for="@Model.Price" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="create" class="btn btn-primary" />
            </div>
            <div>
                <a asp-page="Index" asp-route-id="@Model.Hotel_No">Back to list</a>
            </div>
        </form>
    </div>
</div>