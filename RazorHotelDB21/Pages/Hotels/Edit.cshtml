@page
@model RazorHotelDB21.Pages.Hotels.EditModel
@{
}

<h1>Edit Hotel</h1>

<h2>Old Values</h2>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="@Model.OldHotel_No" class="custom-control-label"></label>
            <h5>@Model.OldHotel_No</h5>
            
        </div>
        <div class="form-group">
            <label asp-for="@Model.OldName" class="custom-control-label"></label>
            <h5>@Model.OldName</h5>
            
        </div>
        <div class="form-group">
            <label asp-for="@Model.OldAddress" class="custom-control-label"></label>
            <h5>@Model.OldAddress</h5>
            
        </div>
    </div>
</div>


<h1 class="alert-danger">@Model.Error</h1>

<h2>New Values</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-page-handler="Edit">
            <div class="form-group">
                <label asp-for="@Model.NewHotel_No" class="custom-control-label"></label>
                <input asp-for="@Model.NewHotel_No" class="form-control" />
                <input asp-for="@Model.OldHotel_No" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.NewName" class="custom-control-label"></label>
                <input asp-for="@Model.NewName" class="form-control" />
                <input asp-for="@Model.OldName" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.NewAddress" class="custom-control-label"></label>
                <input asp-for="@Model.NewAddress" class="form-control" />
                <input asp-for="@Model.OldAddress" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<form method="post" asp-page-handler="Delete">
    <div class="form-group">
        <input asp-for="@Model.OldHotel_No" type="hidden" />
    </div>
    <div class="form-group">
        <input asp-for="@Model.OldName" type="hidden" />
    </div>
    <div class="form-group">
        <input asp-for="@Model.OldAddress" type="hidden" />
    </div>
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
</form>

<div>
    <a asp-page="Index">Back to list</a>
</div>